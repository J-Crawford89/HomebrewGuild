@model Models.RaceModels.RaceDetailView

@{
    ViewBag.Title = "Details";
}

<div class="pageTitle adminTitle">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
</div>

<div class="container-md">
    <div class="row">
        <div class="col-10 col-lg-8 offset-1 offset-lg-2">
            <div class="card displayCard">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                    <h6><strong>@Html.DisplayNameFor(model => model.Size): </strong>@Html.DisplayFor(model => model.Size)</h6>
                    <h6><strong>@Html.DisplayNameFor(model => model.Speed): </strong>@Html.DisplayFor(model => model.Speed)</h6>
                    <h6><strong>@Html.DisplayNameFor(model => model.HasDarkvision): </strong>@Html.DisplayFor(model => model.HasDarkvision)</h6>
                    <h6><strong>@Html.DisplayNameFor(model => model.AbilityScoreIncrease): </strong>@Html.DisplayFor(model => model.AbilityScoreIncrease)</h6>
                    @if (Model.Traits != null)
                    {
                        <hr />
                        foreach (var kvp in Model.Traits)
                        {
                            <p><strong><i>@kvp.Key</i>. </strong>@kvp.Value</p>
                        }
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="formButtonsContainer row">
        <div class="col-12 col-lg-10">
            <ul class="horizontalList formButtons">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li><button type="button" class="btn btn-cancel deleteItem" data-id="@Model.Id"><i class="far fa-trash-alt"></i></button></li>
                    <li><button type="button" class="btn btn-primary"><a href="/Race/"><i class="far fa-list-alt"></i></a></button></li>
                    <li><button type="button" class="btn btn-primary"><a href="/Race/Edit/@Model.Id"><i class="fas fa-edit"></i></a></button></li>
                }
                else
                {
                    <li><button type="button" class="btn btn-primary"><a href="/Race/"><i class="far fa-list-alt"></i></a></button></li>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.deleteItem').on('click', function () {
                var itemId = $(this).attr('data-id');
                var message = confirm('Are you sure you wish to delete this item?');

                if (message) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Delete", "Race")',
                        data: { itemId },
                        success: function () {
                            history.back();
                        },
                        error: function () {
                            alert('Unable to delete item');
                        }
                    })
                }
            })
        })
    </script>
}
