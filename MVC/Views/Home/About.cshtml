@{
    ViewBag.Title = "About";
}

<div class="pageTitle aboutTitle">
    <h1>About the Homebrew Guild</h1>
</div>

<div class="container formStandardStart">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <p>Use this area to provide additional information.</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="row justify-content-center align-items-center startCreatingContainer">
            <button type="button" class="btn btn-primary btn-lg" id="startCreating">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Start Creating", "Index", "MyCreations")
                    }
                    else
                    {
                        @Html.ActionLink("Start Creating", "Register", "Account")
                    }
                }
            </button>
        </div>
    </div>
</div>
