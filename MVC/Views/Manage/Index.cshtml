@model MVC.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<div class="pageTitle manageTitle">
    <h1>Account</h1>
</div>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="container">
