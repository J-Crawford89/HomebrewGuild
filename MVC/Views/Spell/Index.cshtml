@model IEnumerable<Models.SpellModels.SpellListItem>

@{
    ViewBag.Title = "Index";
}
<div class="pageTitle spellTitle">
    <h1>@@@User.Identity.Name's Spells</h1>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="indexCreateLink">
        <button type="button" value="createSpell" class="btn btn-primary">@Html.ActionLink("Create a Spell", "Create", "UserSpell")</button>
    </div>
}

<div class="row justify-content-center">
    <table class="table col-md-10">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpellLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRitual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresConcentration)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpellLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRitual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiresConcentration)
                </td>
                <td class="listButtons">
                    <ul class="horizontalList">
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == item.Creator || User.IsInRole("Admin"))
                        {
                            <li><button type="button" class="btn btn-cancel btn-sm">@Html.ActionLink("Delete", "Delete", "UserSpell", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete this spell?')" })</button></li>
                            <li><button type="button" class="btn btn-primary btn-sm" style="width: 108px;">@Html.ActionLink("More", "Details", new { id = item.Id })</button></li>
                            <li><button type="button" class="btn btn-primary btn-sm" style="width:108px;">@Html.ActionLink("Edit", "Edit", "UserSpell", new { id = item.Id }, "")</button></li>
                        }
                        else
                        {
                            <li><button type="button" class="btn btn-primary btn-sm" style="width: 108px;">@Html.ActionLink("More", "Details")</button></li>
                        }
                    </ul>
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}