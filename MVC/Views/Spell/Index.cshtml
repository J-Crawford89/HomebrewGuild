@model IEnumerable<Models.SpellModels.SpellListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpellLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRitual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiresConcentration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Creator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpellLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsRitual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresConcentration)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
