@model IEnumerable<Models.MonsterModels.MonsterListItem>

@{
    ViewBag.Title = "Index";
}

<div class="pageTitle">
    <h1>Monsters</h1>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="indexCreateLink">
        <button type="button" value="createMonster" class="btn btn-primary">@Html.ActionLink("Create a Monster", "Create", "UserMonster")</button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChallengeRating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChallengeRating)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
